<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Swag\CustomerPrice\Extension\Content\Product\CustomerPriceExtension">
            <tag name="shopware.entity.extension"/>
        </service>
        <service id="Swag\CustomerPrice\Extension\Content\Product\CustomerPriceExtensionDefinition">
            <tag name="shopware.entity.definition" entity="swag_customer_price_extension"/>
        </service>
        <service id="Swag\CustomerPrice\Listener\DemoDataServiceExtensionAttacher">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="customer.repository"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="swag_customer_price_extension.repository"/>
        </service>
    </services>
</container>
